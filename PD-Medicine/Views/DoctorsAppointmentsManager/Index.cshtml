@model PD_Medicine.ViewModels.DoctorAppointments.DoctorAppointmentsListVM


<h2>Appointments</h2>



<table class="table table-hover sortable">
    <tr>
        <td>Patient Username</td>
        <td>Symptoms</td>
        <td>Date and Hour</td>
        <td>Status</td>
        <td>Action</td>
    </tr>

    @foreach (var item in Model.Items)
    {
        if (item.Status == false)
        {
            <tr>
                <td>
                    @item.Username
                </td>
                <td>
                    @item.Symptoms
                </td>
                <td>
                    @item.DateHour
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }
</table>

<div>
        @Html.Partial("_PagingPartial", Model.Pager)
    </div>